			@import url("https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;800&family=Poppins:wght@400;500;600;700;800&display=swap");
			:root {
				--primary: #0e1d73;
				--secondary: #0f58c8;
				--deep: #04114f;
				--accent: #ffcc29;
				--pink: #ff5f8f;
				--aqua: #21d6e2;
				--mint: #00d2ff;
				--muted: #5c6b90;
				--light: #f2f7ff;
				--bg: #f9fbff;
				--card: #f5fbff;
				--radius: 18px;
			}
			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}
			body {
				margin: 0;
				font-family: "Be Vietnam Pro", "Poppins", system-ui, -apple-system, sans-serif;
				color: #0b183b;
				background: #fff;
				line-height: 1.6;
			}
			a {
				color: inherit;
				text-decoration: none;
			}
			img {
				max-width: 100%;
				display: block;
			}
			.top-bar {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 8px 28px;
				font-size: 12px;
				color: #e9efff;
				background: #081345;
			}
			.top-links {
				display: flex;
				gap: 14px;
				align-items: center;
				flex-wrap: wrap;
			}
			.pill {
				padding: 6px 10px;
				background: rgba(255, 255, 255, 0.08);
				border-radius: 12px;
				border: 1px solid rgba(255, 255, 255, 0.15);
			}
			header {
				position: relative;
				background: linear-gradient(120deg, #0c1b6d 0%, #0f58c8 45%, #0c1a63 100%);
				color: #fff;
				overflow: hidden;
			}
			.navbar {
				display: flex;
				align-items: center;
				justify-content: space-between;
				gap: 20px;
				max-width: 1240px;
				margin: 0 auto;
				padding: 18px 28px;
			}
			.brand {
				display: flex;
				align-items: center;
				gap: 12px;
				font-weight: 800;
				letter-spacing: 0.3px;
				font-size: 18px;
			}
			.brand-mark {
				width: 42px;
				height: 42px;
				border-radius: 12px;
				background: var(--accent);
				display: grid;
				place-items: center;
				color: #0b1d6a;
				font-weight: 800;
				box-shadow: 0 12px 24px rgba(255, 204, 41, 0.25);
			}
			.nav-links {
				display: flex;
				align-items: center;
				gap: 18px;
				font-weight: 600;
				font-size: 14px;
			}
			.nav-links a {
				padding: 8px 0;
				position: relative;
			}
			.nav-links a::after {
				content: "";
				position: absolute;
				bottom: -4px;
				left: 0;
				right: 0;
				height: 2px;
				background: var(--accent);
				opacity: 0;
				transform: scaleX(0.6);
				transition: opacity 150ms ease, transform 150ms ease;
			}
			.nav-links a:hover::after {
				opacity: 1;
				transform: scaleX(1);
			}
			.nav-cta {
				display: flex;
				gap: 12px;
				align-items: center;
			}
			.btn {
				border: 0;
				border-radius: 14px;
				font-weight: 700;
				padding: 11px 16px;
				cursor: pointer;
				font-size: 14px;
				transition: transform 160ms ease, box-shadow 160ms ease;
			}
			.btn.primary {
				background: var(--accent);
				color: #0c1a63;
				box-shadow: 0 12px 32px rgba(255, 204, 41, 0.35);
			}
			.btn.secondary {
				background: rgba(255, 255, 255, 0.08);
				color: #fff;
				border: 1px solid rgba(255, 255, 255, 0.25);
			}
			.btn:hover {
				transform: translateY(-1px);
			}
			.hero {
				position: relative;
				max-width: 1240px;
				margin: 0 auto;
				padding: 32px 24px 72px;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 32px;
				align-items: center;
			}
			.hero::after {
				content: "";
				position: absolute;
				width: 420px;
				height: 420px;
				background: radial-gradient(circle, rgba(255, 204, 41, 0.4), transparent 62%);
				top: -120px;
				right: -40px;
				filter: blur(6px);
				opacity: 0.7;
			}
			.hero-text h1 {
				margin: 10px 0 8px;
				font-size: clamp(32px, 4vw, 46px);
				letter-spacing: 0.2px;
			}
			.hero-tag {
				display: inline-flex;
				align-items: center;
				gap: 8px;
				padding: 8px 12px;
				border-radius: 14px;
				background: rgba(255, 255, 255, 0.12);
				border: 1px solid rgba(255, 255, 255, 0.25);
				font-size: 12px;
				text-transform: uppercase;
			}
			.hero-sub {
				color: #e6edff;
				margin: 6px 0 16px;
				max-width: 560px;
			}
			.hero-highlight {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
				gap: 12px;
				margin: 18px 0 24px;
			}
			.hero-card {
				background: rgba(255, 255, 255, 0.08);
				border: 1px solid rgba(255, 255, 255, 0.15);
				border-radius: 14px;
				padding: 12px 14px;
				box-shadow: 0 16px 38px rgba(0, 0, 0, 0.18);
			}
			.hero-card strong {
				display: block;
				font-size: 20px;
			}
			.hero-media {
				position: relative;
				padding: 20px;
				border-radius: 28px;
				background: linear-gradient(180deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.02) 100%);
				box-shadow: 0 20px 60px rgba(4, 17, 79, 0.35);
				overflow: hidden;
			}
			.hero-media::before {
				content: "";
				position: absolute;
				width: 180px;
				height: 180px;
				background: radial-gradient(circle, rgba(33, 214, 226, 0.3), transparent 60%);
				top: -40px;
				left: -30px;
			}
			.hero-media::after {
				content: "";
				position: absolute;
				width: 160px;
				height: 160px;
				background: radial-gradient(circle, rgba(255, 95, 143, 0.25), transparent 60%);
				bottom: -30px;
				right: -20px;
			}
			.hero-media img {
				border-radius: 18px;
				object-fit: cover;
				aspect-ratio: 4 / 5;
			}
			main {
				background: #fff;
			}
			.section {
				padding: 70px 20px;
			}
			.container {
				max-width: 1180px;
				margin: 0 auto;
			}
			.section-title {
				text-align: center;
				margin-bottom: 26px;
			}
			.section-title h2 {
				margin: 0;
				font-size: clamp(26px, 3vw, 34px);
			}
			.section-title p {
				color: var(--muted);
				margin: 6px auto 0;
				max-width: 760px;
			}
			.info-wrap {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 18px;
				align-items: center;
				position: relative;
			}
			.info-card,
			.photo-card {
				background: #fff;
				border-radius: 18px;
				padding: 20px;
				border: 1px solid #e9f0ff;
				box-shadow: 0 20px 60px rgba(13, 33, 110, 0.08);
			}
			.photo-card img {
				border-radius: 14px;
				aspect-ratio: 4 / 3;
				object-fit: cover;
			}
			.icon-list {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 10px;
				margin: 14px 0;
				color: var(--muted);
				font-weight: 600;
				font-size: 14px;
			}
			.stats-bar {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
				gap: 12px;
				margin-top: 16px;
			}
			.stat {
				border-radius: 14px;
				border: 1px solid #e4ebff;
				background: #fff;
				padding: 12px;
				text-align: center;
				box-shadow: 0 12px 30px rgba(13, 33, 110, 0.06);
			}
			.stat strong {
				display: block;
				font-size: 22px;
			}
			.reason-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
				gap: 14px;
			}
			.reason-card {
				background: var(--card);
				border-radius: 16px;
				padding: 16px;
				border: 1px solid #e1eaff;
				box-shadow: 0 16px 36px rgba(13, 33, 110, 0.05);
			}
			.reason-card strong {
				display: block;
				font-size: 16px;
			}
			.reason-card p {
				margin: 6px 0 0;
				color: var(--muted);
			}
			.programs {
				margin-top: 32px;
				background: linear-gradient(160deg, var(--deep) 0%, var(--primary) 60%, #0a2177 100%);
				border-radius: 26px;
				padding: 28px 24px;
				color: #fff;
				position: relative;
				overflow: hidden;
				box-shadow: 0 30px 80px rgba(4, 17, 79, 0.35);
			}
			.programs::after {
				content: "";
				position: absolute;
				width: 420px;
				height: 420px;
				background: radial-gradient(circle, rgba(255, 204, 41, 0.32), transparent 65%);
				top: -140px;
				right: -80px;
			}
			.program-grid {
				position: relative;
				z-index: 1;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
				gap: 14px;
			}
			.program-card {
				background: rgba(255, 255, 255, 0.08);
				border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 16px;
				padding: 16px;
			}
			.program-card h3 {
				margin: 0 0 6px;
				font-size: 18px;
			}
			.gallery-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 14px;
				margin-top: 20px;
			}
			.gallery-grid img {
				border-radius: 14px;
				height: 140px;
				object-fit: cover;
				box-shadow: 0 14px 32px rgba(10, 26, 120, 0.14);
			}
			.quote-block {
				margin-top: 32px;
				background: var(--bg);
				border-radius: 20px;
				padding: 18px;
				border: 1px solid #e5edff;
				box-shadow: 0 16px 44px rgba(13, 33, 110, 0.06);
			}
			.quote-block strong {
				display: block;
				font-size: 18px;
			}
			.feature-mosaic {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
				gap: 16px;
				margin-top: 18px;
			}
			.feature-card {
				background: #fff;
				border-radius: 18px;
				border: 1px solid #e5ecff;
				box-shadow: 0 16px 44px rgba(13, 33, 110, 0.07);
				padding: 16px;
				display: grid;
				gap: 10px;
			}
			.feature-card img {
				border-radius: 14px;
				height: 150px;
				object-fit: cover;
			}
			.news-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
				gap: 14px;
			}
			.news-card {
				background: #fff;
				border-radius: 16px;
				border: 1px solid #e6edff;
				padding: 16px;
				box-shadow: 0 12px 36px rgba(13, 33, 110, 0.06);
			}
			.news-card h3 {
				margin: 10px 0 6px;
				font-size: 16px;
			}
			.cta-section {
				background: linear-gradient(140deg, #04114f 0%, #0f58c8 100%);
				color: #fff;
				padding: 38px 26px;
				border-radius: 24px;
				box-shadow: 0 32px 90px rgba(4, 17, 79, 0.42);
			}
			.cta-fields {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
				gap: 12px;
				margin-top: 14px;
			}
			.cta-fields input,
			.cta-fields select {
				padding: 12px;
				border-radius: 12px;
				border: 1px solid rgba(255, 255, 255, 0.2);
				background: rgba(255, 255, 255, 0.1);
				color: #fff;
				font-size: 14px;
			}
			.cta-fields input::placeholder {
				color: rgba(255, 255, 255, 0.75);
			}
			.cta-textarea {
				margin-top: 12px;
				width: 100%;
				min-height: 120px;
				border-radius: 14px;
				border: 1px solid rgba(255, 255, 255, 0.2);
				background: rgba(255, 255, 255, 0.1);
				color: #fff;
				padding: 12px;
				font-family: inherit;
				font-size: 14px;
			}
			.partners {
				margin-top: 28px;
				display: flex;
				flex-wrap: wrap;
				gap: 10px;
				align-items: center;
			}
			.partner {
				padding: 10px 12px;
				border-radius: 12px;
				background: var(--light);
				border: 1px solid #e1eaff;
				font-weight: 700;
				color: #0a1e70;
			}
			.footer {
				background: #051139;
				color: #d6e0ff;
				padding: 50px 20px 28px;
				margin-top: 68px;
			}
			.footer-grid {
				max-width: 1180px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
				gap: 18px;
			}
			.footer h4 {
				margin: 0 0 8px;
				color: #fff;
			}
			.bottom {
				text-align: center;
				margin-top: 18px;
				font-size: 13px;
				color: #9fb1e4;
			}
			.badge {
				display: inline-flex;
				align-items: center;
				gap: 8px;
				padding: 8px 12px;
				border-radius: 12px;
				background: var(--light);
				color: var(--secondary);
				font-weight: 600;
				font-size: 13px;
			}
			.shape {
				position: absolute;
				border-radius: 50%;
				opacity: 0.18;
				pointer-events: none;
			}
			@media (max-width: 1024px) {
				.nav-links {
					display: none;
				}
				.navbar {
					padding: 16px 18px;
				}
				.hero {
					padding: 26px 18px 60px;
				}
			}
			@media (max-width: 640px) {
				.top-bar {
					display: none;
				}
				.section {
					padding: 58px 16px;
				}
				.hero {
					padding-bottom: 48px;
				}
				.btn {
					width: 100%;
					text-align: center;
				}
				.nav-cta {
					display: none;
				}
			}
		</style>
	</head>
