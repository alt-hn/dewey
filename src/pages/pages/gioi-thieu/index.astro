---
import Navbar from './sections/Navbar.astro';
import HeroSlider from './sections/HeroSlider.astro';
import IntroSection from './sections/IntroSection.astro';
import GioiThieuSection from './sections/GioiThieuSection.astro';
import ThanhTichGridSection from './sections/ThanhTichGridSection.astro';
import ThanhTichAltSection from './sections/ThanhTichAltSection.astro';
import InfographicSection from './sections/InfographicSection.astro';
import ProgramCardsSection from './sections/ProgramCardsSection.astro';
import LifeEduSection from './sections/LifeEduSection.astro';
import CampusListSection from './sections/CampusListSection.astro';
import EnglishProgramSection from './sections/EnglishProgramSection.astro';
import ExtracurricularSection from './sections/ExtracurricularSection.astro';
import Footer from './sections/Footer.astro';
---

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Giới Thiệu - The Dewey Schools</title>
  <link rel="stylesheet" href="/src/styles/tailwind.css" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;800&display=swap');
    
    *, *::before, *::after {
      box-sizing: border-box;
    }
    
    html, body {
      font-family: 'Be Vietnam Pro', Arial, sans-serif;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }
  </style>
</head>
<body>
  <Navbar />
  <HeroSlider />
  <IntroSection />
  <GioiThieuSection />
  <InfographicSection />
  <ThanhTichGridSection />
  <ThanhTichAltSection />
  <ProgramCardsSection />
  <LifeEduSection />
  <CampusListSection />
  <EnglishProgramSection />
  <ExtracurricularSection />
  <Footer />
</body>
</html>
