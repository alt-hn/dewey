---
import frame565 from '../images/Frame 1261155565.png';
import frame568 from '../images/Frame 1261155568.png';
import frame573 from '../images/Frame 1261155573.png';
import frame575 from '../images/Frame 1261155575.png';
import frame583 from '../images/Frame 1261155583.png';
import frame596 from '../images/Frame 1261155596.png';
import frame622 from '../images/Frame 1261155622.png';

const stats = [
  { title: '145', desc: 'Học sinh đỗ 145 trường đại học trong nước & quốc tế', icon: frame565 },
  { title: 'Top 1%', desc: 'Học sinh lọt Top 1% điểm SAT cao nhất thế giới', icon: frame573 },
  { title: '100%', desc: 'Học sinh đỗ Đại học trong nước, quốc tế & nước ngoài', icon: frame583 },
  { title: '153 tỷ', desc: 'Tổng học bổng & hỗ trợ tài chính học sinh đạt được', icon: frame596 },
  { title: '30+', desc: 'Quốc tịch', icon: frame622 },
  { title: '96%', desc: 'Học sinh đạt học bổng trường quốc tế' },
  { title: '4500+', desc: 'Học sinh', image: frame568 },
  { title: '45+', desc: 'Chuyên gia giáo dục' },
  { title: '100%', desc: 'Bài thi AP đạt 4/5 và 5/5' },
  { title: '1798', desc: 'Học sinh', image: frame575 }
];
---

<section class="thanh-tich-infographic">
  <div class="thanh-tich-infographic__container">
    <div class="thanh-tich-infographic__header">
      <h2 class="thanh-tich-infographic__title">HOÀNH TRÁNG VINSERS</h2>
    </div>

    <div class="thanh-tich-infographic__panel">
      <div class="thanh-tich-infographic__panel-grid">
        <div class="thanh-tich-infographic__box box--a">
          {stats[0].icon && <img src={stats[0].icon.src} alt="" class="thanh-tich-infographic__box-img" />}
          <div class="thanh-tich-infographic__box-content">
            <div class="thanh-tich-infographic__small-stat">{stats[0].title}</div>
            <div class="thanh-tich-infographic__small-desc">{stats[0].desc}</div>
          </div>
        </div>

        <div class="thanh-tich-infographic__box box--b">
          {stats[6].image && <img src={stats[6].image.src} alt="" class="thanh-tich-infographic__hero-img" />}
        </div>

        <div class="thanh-tich-infographic__box box--c">
          <div class="thanh-tich-infographic__badge">{stats[8].title}</div>
          <div class="thanh-tich-infographic__small-desc">{stats[8].desc}</div>
        </div>

        <div class="thanh-tich-infographic__box box--d">
          <div class="thanh-tich-infographic__small-stat">{stats[5].title}</div>
          <div class="thanh-tich-infographic__small-desc">{stats[5].desc}</div>
        </div>

        <div class="thanh-tich-infographic__box box--e">
          <div class="thanh-tich-infographic__big-title">TOP 1<br/>THẾ GIỚI</div>
          <div class="thanh-tich-infographic__chips">
            <div class="thanh-tich-infographic__chip">
              <div class="chip__num">{stats[1].title}</div>
              <div class="chip__desc">{stats[1].desc}</div>
            </div>
            <div class="thanh-tich-infographic__chip">
              <div class="chip__num">{stats[4].title}</div>
              <div class="chip__desc">{stats[4].desc}</div>
            </div>
            <div class="thanh-tich-infographic__chip">
              <div class="chip__num">{stats[7].title}</div>
              <div class="chip__desc">{stats[7].desc}</div>
            </div>
          </div>
        </div>

        <div class="thanh-tich-infographic__box box--f">
          <div class="thanh-tich-infographic__small-stat">{stats[9].title}</div>
          <div class="thanh-tich-infographic__small-desc">{stats[9].desc}</div>
        </div>

        <div class="thanh-tich-infographic__box box--g">
          {stats[2].icon && <img src={stats[2].icon.src} alt="" class="thanh-tich-infographic__box-img" />}
          <div class="thanh-tich-infographic__box-content">
            <div class="thanh-tich-infographic__small-stat">{stats[2].title}</div>
            <div class="thanh-tich-infographic__small-desc">{stats[2].desc}</div>
          </div>
        </div>

        <div class="thanh-tich-infographic__box box--h">
          {stats[3].icon && <img src={stats[3].icon.src} alt="" class="thanh-tich-infographic__box-img" />}
          <div class="thanh-tich-infographic__box-content">
            <div class="thanh-tich-infographic__small-stat">{stats[3].title}</div>
            <div class="thanh-tich-infographic__small-desc">{stats[3].desc}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
  </div>
</section>

<style>
.thanh-tich-infographic {
  padding: 80px 20px;
  background: rgba(26, 26, 77, 1);
  position: relative;
}

.thanh-tich-infographic__container {
  max-width: 1400px;
  margin: 0 auto;
}

.thanh-tich-infographic__header {
  margin-bottom: 60px;
}

.thanh-tich-infographic__title {
  font-size: 32px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.thanh-tich-infographic__grid {
  position: relative;
  width: 100%;
  height: 900px;
}

.thanh-tich-infographic__card {
  position: absolute;
  padding: 32px;
  background: transparent;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* Divider lines - Transparent layer với đường kẻ vàng */
.thanh-tich-infographic__divider {
  position: absolute;
  background: rgb(255, 214, 0);
  z-index: 1;
}

.thanh-tich-infographic__divider--v1 {
  top: 0;
  left: 35%;
  width: 2px;
  height: 100%;
}

.thanh-tich-infographic__divider--v2 {
  top: 0;
  right: 35%;
  width: 2px;
  height: 100%;
}

.thanh-tich-infographic__divider--h1 {
  top: 33%;
  left: 0;
  width: 100%;
  height: 2px;
}

.thanh-tich-infographic__divider--h2 {
  top: 66%;
  left: 0;
  width: 100%;
  height: 2px;
}

/* Card 1: 145 - Góc trái trên nhỏ */
.thanh-tich-infographic__card--1 {
  top: 20px;
  left: 20px;
  width: 200px;
  height: 180px;
}

/* Card 2: 30+ - Nhỏ trên */
.thanh-tich-infographic__card--2 {
  top: 0;
  left: 240px;
  width: 160px;
  height: 160px;
}

/* Card 3: Top 1% - Góc phải trên */
.thanh-tich-infographic__card--3 {
  top: 20px;
  right: 220px;
  width: 240px;
  height: 200px;
}

/* Card 4: 45+ - Nhỏ góc phải trên */
.thanh-tich-infographic__card--4 {
  top: 0;
  right: 20px;
  width: 180px;
  height: 170px;
}

/* CENTER: 153 tỷ - HIGHLIGHT lớn ở giữa */
.thanh-tich-infographic__card--center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 480px;
  height: 320px;
  z-index: 10;
  box-shadow: 0 20px 80px rgba(255, 214, 0, 0.2);
}

/* Card 5: 100% AP - Trái giữa */
.thanh-tich-infographic__card--5 {
  top: 50%;
  left: 20px;
  transform: translateY(-50%);
  width: 220px;
  height: 200px;
}

/* Card 6: 96% - Phải giữa */
.thanh-tich-infographic__card--6 {
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
  width: 240px;
  height: 200px;
}

/* Card 7: 100% đỗ ĐH - Dưới trái lớn */
.thanh-tich-infographic__card--7 {
  bottom: 20px;
  left: 20px;
  width: 320px;
  height: 220px;
}

/* Card 8: 4500+ - Ảnh lớn dưới giữa */
.thanh-tich-infographic__card--8 {
  bottom: 20px;
  left: 360px;
  width: 350px;
  height: 280px;
  padding: 0;
  overflow: hidden;
}

/* Card 9: 1798 - Ảnh lớn dưới phải */
.thanh-tich-infographic__card--9 {
  bottom: 20px;
  right: 20px;
  width: 400px;
  height: 280px;
  padding: 0;
  overflow: hidden;
}

.thanh-tich-infographic__stat {
  font-size: 64px;
  font-weight: 800;
  color: rgb(255, 214, 0);
  line-height: 1;
  margin-bottom: 16px;
  text-shadow: 0 2px 10px rgba(255, 214, 0, 0.3);
}

.thanh-tich-infographic__stat--large {
  font-size: 96px;
  font-weight: 900;
  text-shadow: 0 4px 20px rgba(255, 214, 0, 0.5);
}

.thanh-tich-infographic__desc {
  font-size: 15px;
  line-height: 1.6;
  color: #ffffff;
  opacity: 0.95;
  font-weight: 400;
}

.thanh-tich-infographic__desc--large {
  font-size: 18px;
  line-height: 1.7;
  font-weight: 500;
}

.thanh-tich-infographic__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.thanh-tich-infographic__overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32px;
  background: linear-gradient(to top, rgba(26, 26, 77, 0.98) 0%, rgba(26, 26, 77, 0.85) 60%, transparent 100%);
}

.thanh-tich-infographic__panel {
  background: linear-gradient(180deg, rgba(24,26,63,1) 0%, rgba(20,22,54,1) 100%);
  border-radius: 14px;
  padding: 28px;
  border: 1px solid rgba(255,214,0,0.06);
  box-shadow: 0 10px 40px rgba(8,10,30,0.6) inset;
}

.thanh-tich-infographic__panel-grid {
  display: grid;
  grid-template-columns: 320px 1fr 320px;
  grid-template-rows: auto 240px auto;
  gap: 18px;
  align-items: stretch;
}

.thanh-tich-infographic__box {
  background: rgba(36,39,86,0.6);
  border-radius: 8px;
  padding: 18px;
  color: #fff;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140px;
}

.thanh-tich-infographic__box-img { width: 100%; height: 100%; object-fit: cover; border-radius: 6px; display:block; }
.thanh-tich-infographic__hero-img { width: 100%; height: 240px; object-fit: cover; border-radius: 6px; display:block; }

.thanh-tich-infographic__box-content { position: relative; z-index: 3; }
.thanh-tich-infographic__small-stat { font-weight: 800; color: rgb(255,214,0); font-size: 36px; }
.thanh-tich-infographic__small-desc { font-size: 13px; opacity: 0.95; margin-top: 6px; }
.thanh-tich-infographic__badge { background: rgba(255,214,0,0.06); color: rgb(255,214,0); padding: 10px 14px; display:inline-block; border-radius: 999px; font-weight:800; }

.thanh-tich-infographic__big-title { font-size: 48px; font-weight:900; color: rgb(255,214,0); text-align:center; line-height:1; }

.thanh-tich-infographic__chips { display:flex; gap:14px; justify-content:center; margin-top:16px; flex-wrap:wrap; }
.thanh-tich-infographic__chip { background: rgba(255,214,0,0.06); padding:10px 12px; border-radius:8px; text-align:center; min-width:150px; }
.thanh-tich-infographic__chip .chip__num { color: rgb(255,214,0); font-weight:800; font-size:20px; }
.thanh-tich-infographic__chip .chip__desc { font-size:12px; color:#fff; opacity:0.95; margin-top:6px; }

/* Grid placements */
.box--a { grid-column: 1; grid-row: 1; }
.box--b { grid-column: 2; grid-row: 1; }
.box--c { grid-column: 3; grid-row: 1; text-align: right; }
.box--d { grid-column: 1; grid-row: 3; }
.box--e { grid-column: 1 / -1; grid-row: 2; display:flex; align-items:center; justify-content:space-between; background: rgba(24,26,63,0.95); padding:22px; gap:20px; }
.box--f { grid-column: 3; grid-row: 3; }
.box--g { grid-column: 2; grid-row: 3; }
.box--h { grid-column: 3; grid-row: 3; }

/* Ensure bottom row boxes have a consistent min-height */
.thanh-tich-infographic__panel-grid > .thanh-tich-infographic__box { min-height: 160px; }

@media (max-width: 1024px) {
  .thanh-tich-infographic__panel-grid { grid-template-columns: 1fr; grid-template-rows: auto; }
  .box--e { grid-column: 1; }
  .thanh-tich-infographic__big-title { font-size: 36px; }
  .thanh-tich-infographic__small-stat { font-size: 28px; }
  .thanh-tich-infographic__hero-img { height: 200px; }
  .thanh-tich-infographic__box { min-height: auto; padding: 14px; }
  .thanh-tich-infographic__chips { justify-content:center; }
}
@media (max-width: 1024px) {
  .thanh-tich-infographic {
    padding: 60px 16px;
  }

  .thanh-tich-infographic__grid {
    position: static;
    height: auto;
  }

  .thanh-tich-infographic__divider {
    display: none;
  }

  .thanh-tich-infographic__card {
    position: static !important;
    width: 100% !important;
    height: auto !important;
    min-height: 200px;
    margin-bottom: 20px;
  }

  .thanh-tich-infographic__card--7,
  .thanh-tich-infographic__card--10 {
    min-height: 280px;
  }

  .thanh-tich-infographic__stat {
    font-size: 48px;
  }
}
</style>
