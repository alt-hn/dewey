<style>
  .infographic-section {
    width: 100%;
    background: #0a1a3a;
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }
  .infographic-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
  }
  .infographic-section__header {
    text-align: center;
    margin-bottom: 60px;
  }
  .infographic-section__label {
    font-size: 0.75rem;
    font-weight: 700;
    color: rgba(255,255,255,0.5);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 8px;
  }
  .infographic-section__title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    margin: 0;
    letter-spacing: -0.5px;
    line-height: 1.2;
  }
  
  /* Asymmetric grid layout */
  .infographic-section__grid {
    display: grid;
    grid-template-columns: 1fr 1.8fr 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: 20px;
  }
  
  /* Card styles */
  .infographic-section__card {
    background: #1a2847;
    border-radius: 20px;
    padding: 32px 28px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    text-align: left;
    transition: transform 0.3s;
    position: relative;
    overflow: hidden;
    min-height: 180px;
  }
  
  .infographic-section__card:hover {
    transform: translateY(-4px);
  }
  
  .infographic-section__card--light {
    background: #fff;
  }
  
  /* Image card - separate image area */
  .infographic-section__card--image {
    padding: 0;
    display: flex;
    flex-direction: column;
  }
  
  .infographic-section__card-image {
    width: 100%;
    height: 140px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    flex-shrink: 0;
  }
  
  .infographic-section__card-content {
    padding: 28px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  
  /* Grid positioning */
  .infographic-section__card:nth-child(1) {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  }
  
  .infographic-section__card:nth-child(2) {
    grid-column: 2 / 3;
    grid-row: 1 / 3;
    min-height: 320px;
  }
  
  .infographic-section__card:nth-child(3) {
    grid-column: 3 / 5;
    grid-row: 1 / 2;
  }
  
  .infographic-section__card:nth-child(4) {
    grid-column: 1 / 2;
    grid-row: 2 / 3;
  }
  
  .infographic-section__card:nth-child(5) {
    grid-column: 3 / 4;
    grid-row: 2 / 3;
  }
  
  .infographic-section__card:nth-child(6) {
    grid-column: 4 / 5;
    grid-row: 2 / 4;
    min-height: 320px;
  }
  
  .infographic-section__card:nth-child(7) {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
  }
  
  .infographic-section__card:nth-child(8) {
    grid-column: 2 / 3;
    grid-row: 3 / 4;
  }
  
  .infographic-section__card:nth-child(9) {
    grid-column: 3 / 4;
    grid-row: 3 / 4;
  }
  
  /* Badge */
  .infographic-section__badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
    padding: 6px 14px;
    border-radius: 14px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 14px;
  }
  
  /* Number */
  .infographic-section__number {
    font-size: 3.5rem;
    font-weight: 800;
    color: #fbbf24;
    line-height: 1;
    margin-bottom: 14px;
  }
  
  .infographic-section__card--light .infographic-section__number {
    color: #f59e0b;
  }
  
  /* Text */
  .infographic-section__text {
    font-size: 0.95rem;
    font-weight: 500;
    color: rgba(255,255,255,0.85);
    line-height: 1.4;
  }
  
  .infographic-section__card--light .infographic-section__text {
    color: #475569;
  }
  
  /* Decorative elements */
  .infographic-section__decoration {
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(251,191,36,0.08) 0%, transparent 70%);
    pointer-events: none;
  }
  .infographic-section__decoration--1 {
    top: -250px;
    right: -250px;
  }
  .infographic-section__decoration--2 {
    bottom: -250px;
    left: -250px;
  }
  
  @media (max-width: 1024px) {
    .infographic-section {
      padding: 48px 0;
    }
    .infographic-section__container {
      padding: 0 16px;
    }
    .infographic-section__title {
      font-size: 1.5rem;
    }
    .infographic-section__grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto;
    }
    .infographic-section__card:nth-child(1),
    .infographic-section__card:nth-child(2),
    .infographic-section__card:nth-child(3),
    .infographic-section__card:nth-child(4),
    .infographic-section__card:nth-child(5),
    .infographic-section__card:nth-child(6),
    .infographic-section__card:nth-child(7),
    .infographic-section__card:nth-child(8),
    .infographic-section__card:nth-child(9) {
      grid-column: auto;
      grid-row: auto;
    }
    .infographic-section__card {
      padding: 24px 20px;
      min-height: 160px !important;
    }
    .infographic-section__card-image {
      height: 100px;
    }
    .infographic-section__number {
      font-size: 2.5rem;
    }
    .infographic-section__text {
      font-size: 0.85rem;
    }
  }
</style>

