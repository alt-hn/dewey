  /* Hero Image Container */
  .hero-image-container {
    position: relative;
    flex: 1;
    max-width: 550px;
  }

  .hero-image-frame {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
    transition: transform 0.5s ease;
