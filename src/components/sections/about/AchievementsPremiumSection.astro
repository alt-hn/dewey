    --shadow-glow-cyan: 0 0 30px rgba(62, 220, 255, 0.3);
    --shadow-glow-yellow: 0 0 30px rgba(255, 214, 0, 0.3);
  }

  /* ========================================
     Base Section Styles
     ======================================== */
  .achievements-premium {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background: var(--gradient-main);
    overflow: hidden;
    padding: 80px 0;
  }

  /* ========================================
     Background Layer - Abstract Elements
     ======================================== */
  .bg-layer {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  /* Gradient Orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--navy-purple), transparent 70%);
    top: -200px;
    left: -100px;
    animation: float-orb 20s ease-in-out infinite;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--deep-blue-alt), transparent 70%);
    bottom: -150px;
    right: -100px;
    animation: float-orb 25s ease-in-out infinite reverse;
  }

  .orb-3 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255, 214, 0, 0.2), transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: pulse-orb 10s ease-in-out infinite;
  }

  @keyframes float-orb {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -30px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }

  @keyframes pulse-orb {
    0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.5; transform: translate(-50%, -50%) scale(1.2); }
  }

  /* Neon Lines SVG */
  .neon-lines {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .path-animate {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: draw-path 8s ease-in-out infinite;
  }

  .path-animate-reverse {
    stroke-dasharray: 800;
    stroke-dashoffset: -800;
    animation: draw-path-reverse 10s ease-in-out infinite;
  }

  @keyframes draw-path {
    0% { stroke-dashoffset: 1000; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -1000; }
  }

  @keyframes draw-path-reverse {
    0% { stroke-dashoffset: -800; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: 800; }
  }

  .rotate-slow {
    transform-origin: center;
    animation: rotate-slow 60s linear infinite;
  }

  .rotate-slow-reverse {
    transform-origin: center;
    animation: rotate-slow 80s linear infinite reverse;
  }

