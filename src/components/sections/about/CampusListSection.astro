<style>
  @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;800&display=swap');
  * { margin: 0; padding: 0; box-sizing: border-box; }
  html, body { font-family: 'Be Vietnam Pro', Arial, sans-serif; }
  
  .campus-list-section {
    width: 100%;
    background: #fff;
    padding: 0px 0;
    margin: 0;
  }
  .campus-list-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .campus-list-section__title {
    font-size: 2rem;
    font-weight: 800;
    color: #1A1A5C;
    margin-bottom: 48px;
    text-align: left;
  }
  .campus-list-section__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    justify-items: stretch;
    align-items: stretch;
    margin: 0 auto;
    width: 100%;
  }
  .campus-list-section__card {
    position: relative;
    display: flex;
    align-items: flex-end;
    min-height: 200px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
    text-decoration: none;
    transition: all 0.3s ease;
    background: #ddd;
    cursor: pointer;
  }
  .campus-list-section__card:hover {
    box-shadow: 0 12px 40px rgba(10,42,108,0.2);
    transform: translateY(-4px);
  }
  .campus-list-section__card-bgimg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ddd 60%, #bbb 100%);
    object-fit: cover;
    z-index: 1;
    opacity: 1;
  }
  .campus-list-section__card-content {
    position: relative;
    z-index: 2;
    padding: 24px;
    width: 100%;
    background: linear-gradient(0deg, rgba(26,26,92,0.65) 0%, rgba(26,26,92,0.0) 100%);
    border-radius: 0 0 20px 20px;
    display: flex;
    align-items: flex-end;
    min-height: 100px;
  }
  .campus-list-section__card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    text-align: left;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
  }
  .campus-list-section__card-arrow {
    font-size: 1.5em;
    color: #fff;
    font-weight: 700;
    transition: margin-left 0.3s;
  }
  .campus-list-section__card:hover .campus-list-section__card-arrow {
    margin-left: 8px;
  }
  .campus-list-section__card-subtitle {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.9);
    margin-top: 8px;
    font-weight: 500;
  }
  @media (max-width: 1200px) {
    .campus-list-section__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }
  }
  @media (max-width: 768px) {
    .campus-list-section {
      padding: 48px 0;
    }
    .campus-list-section__container {
      padding: 0 16px;
    }
    .campus-list-section__title {
      font-size: 1.5rem;
      margin-bottom: 32px;
    }
    .campus-list-section__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    .campus-list-section__card {
      min-height: 260px;
      border-radius: 20px;
    }
    .campus-list-section__card-content {
      padding: 24px;
      border-radius: 0 0 20px 20px;
      min-height: 100px;
    }
    .campus-list-section__card-title {
      font-size: 1.2rem;
      gap: 8px;
    }
  }
</style>

<script>
  function initCampusCards() {
    const cards = document.querySelectorAll('.campus-list-section__card');
    cards.forEach(card => {
      const link = card.getAttribute('href');
      if (link) {
        card.addEventListener('click', (e) => {
          e.preventDefault();
          window.location.href = link;
        });
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCampusCards);
  } else {
    initCampusCards();
  }
  
  requestAnimationFrame(initCampusCards);
</script>

