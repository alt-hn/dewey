<style>
  @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;800&display=swap');
  * { margin: 0; padding: 0; box-sizing: border-box; }
  html, body { font-family: 'Be Vietnam Pro', Arial, sans-serif; }
  
  .thanh-tich-alt-section {
    width: 100%;
    background:
      linear-gradient(110deg, #0d0a75 70%, #1e293b 100%);
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }
  .thanh-tich-alt-section__circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.18;
    z-index: 0;
  }
  .thanh-tich-alt-section__circle--yellow {
    background: #4338ca;
  }
  .thanh-tich-alt-section__circle--blue {
    background: #2563eb;
  }
  .thanh-tich-alt-section__circle--yellow-large {
    width: 600px;
    height: 600px;
    top: 20px;
    left: 4vw;
    background: #000192;
  }
  .thanh-tich-alt-section__circle--blue-large {
    width: 800px;
    height: 800px;
    top: 160px;
    right: 4vw;
    background: #1e40af;
  }
  .thanh-tich-alt-section__circle--yellow-small {
    width: 320px;
    height: 320px;
    bottom: 40px;
    left: 12vw;
    background: #818cf8;
  }
  .thanh-tich-alt-section__circle--blue-small {
    width: 480px;
    height: 480px;
    bottom: 20px;
    right: 12vw;
    background: #334155;
  }
  .thanh-tich-alt-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
  }
  .thanh-tich-alt-section__header {
    text-align: left;
    margin-bottom: 50px;
  }
  .thanh-tich-alt-section__label {
    font-size: 0.75rem;
    font-weight: 700;
    color: rgba(255,255,255,0.5);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 8px;
  }
  .thanh-tich-alt-section__title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    margin: 0;
    letter-spacing: -0.5px;
    line-height: 1.2;
  }
  
  /* Asymmetric layout like Figma */
  .thanh-tich-alt-section__layout {
    display: grid;
    grid-template-columns: 1fr 1.8fr 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: 20px;
  }
  
  /* Card positioning */
  .thanh-tich-alt-section__card {
    background: #00095c;
    border-radius: 21px;
    padding: 16px 16px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    text-align: left;
    transition: transform 0.3s;
    position: relative;
    overflow: hidden;
    min-height: 180px;
  }
  
  .thanh-tich-alt-section__card:hover {
    transform: translateY(-4px);
  }
  /*
  .thanh-tich-alt-section__card--light {
    background: #fff;
  }*/
  
  /* Image card - separate image area from content */
  .thanh-tich-alt-section__card--image {
    padding: 0;
    display: flex;
    flex-direction: column;
  }
  

  .thanh-tich-alt-section__card-image {
    width: 100%;
    height: 100px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    flex-shrink: 0;
  }
  .thanh-tich-alt-section__card-image--orange {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }
  
  .thanh-tich-alt-section__card-content {
    width: 100%;
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  
  /* Span positions for asymmetric layout */
  .thanh-tich-alt-section__card:nth-child(1) {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  }
  
  .thanh-tich-alt-section__card:nth-child(2) {
    grid-column: 2 / 3;
    grid-row: 1 / 3;
    min-height: 320px;
  }
  
  .thanh-tich-alt-section__card:nth-child(3) {
    grid-column: 3 / 5;
    grid-row: 1 / 2;
  }
  
  .thanh-tich-alt-section__card:nth-child(4) {
    grid-column: 1 / 2;
    grid-row: 2 / 3;
  }
  
  .thanh-tich-alt-section__card:nth-child(5) {
    grid-column: 3 / 4;
    grid-row: 2 / 3;
  }
  
  .thanh-tich-alt-section__card:nth-child(6) {
    grid-column: 4 / 5;
    grid-row: 2 / 4;
    min-height: 320px;
  }
  
  .thanh-tich-alt-section__card:nth-child(7) {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
  }
  
  .thanh-tich-alt-section__card:nth-child(8) {
    grid-column: 2 / 3;
    grid-row: 3 / 4;
  }
  
  .thanh-tich-alt-section__card:nth-child(9) {
    grid-column: 3 / 4;
    grid-row: 3 / 4;
  }
  
  /* Badge */
  .thanh-tich-alt-section__badge {
    width: fit-content;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
    padding: 6px 14px;
    border-radius: 14px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 14px;
  }
  
  /* Number */
  .thanh-tich-alt-section__number {
    font-size: 1.8rem;
    font-weight: 800;
    color: #fbbf24;
    line-height: 1;
    margin-bottom: 14px;
  }
  /*
  .thanh-tich-alt-section__card--light .thanh-tich-alt-section__number {
    color: #f59e0b;
  }*/
  
  /* Text */
  .thanh-tich-alt-section__text {
    font-size: 0.65rem;
    font-weight: 500;
    color: rgba(255,255,255,0.85);
    line-height: 1.4;
  }
  
  .thanh-tich-alt-section__card--light .thanh-tich-alt-section__text {
    color: #475569;
  }
  
  /* Decorative elements */
  .thanh-tich-alt-section__decoration {
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(251,191,36,0.08) 0%, transparent 70%);
    pointer-events: none;
  }
  .thanh-tich-alt-section__decoration--1 {
    top: -250px;
    right: -250px;
  }
  .thanh-tich-alt-section__decoration--2 {
    bottom: -250px;
    left: -250px;
  }
  
  /* Tablet responsive (768px - 1024px) */
  @media (max-width: 1024px) and (min-width: 769px) {
    .thanh-tich-alt-section {
      padding: 60px 0;
    }
    
    .thanh-tich-alt-section__container {
      padding: 0 20px;
    }
    
    .thanh-tich-alt-section__header {
      margin-bottom: 40px;
    }
    
    .thanh-tich-alt-section__label {
      font-size: 0.7rem;
    }
    
    .thanh-tich-alt-section__title {
      font-size: 2rem;
    }
    
    .thanh-tich-alt-section__layout {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto;
      gap: 16px;
    }
    
    /* Reset all cards to auto positioning for 3-column grid */
    .thanh-tich-alt-section__card:nth-child(1),
    .thanh-tich-alt-section__card:nth-child(2),
    .thanh-tich-alt-section__card:nth-child(3),
    .thanh-tich-alt-section__card:nth-child(4),
    .thanh-tich-alt-section__card:nth-child(5),
    .thanh-tich-alt-section__card:nth-child(6),
    .thanh-tich-alt-section__card:nth-child(7),
    .thanh-tich-alt-section__card:nth-child(8),
    .thanh-tich-alt-section__card:nth-child(9) {
      grid-column: auto;
      grid-row: auto;
    }
    
    .thanh-tich-alt-section__card {
      padding: 20px 20px;
      min-height: 180px !important;
    }
    
    .thanh-tich-alt-section__card-image {
      height: 120px;
    }
    
    .thanh-tich-alt-section__card-content {
      padding: 20px;
    }
    
    .thanh-tich-alt-section__badge {
      font-size: 0.65rem;
      padding: 5px 12px;
    }
    
    .thanh-tich-alt-section__number {
      font-size: 2.8rem;
      margin-bottom: 12px;
    }
    
    .thanh-tich-alt-section__text {
      font-size: 0.88rem;
    }
  }
  
  /* Mobile responsive (below 768px) */
  @media (max-width: 768px) {
    .thanh-tich-alt-section {
      padding: 40px 0;
    }
    
    .thanh-tich-alt-section__container {
      padding: 0 16px;
    }
    
    .thanh-tich-alt-section__header {
      margin-bottom: 32px;
    }
    
    .thanh-tich-alt-section__label {
      font-size: 0.65rem;
      letter-spacing: 1.5px;
    }
    
    .thanh-tich-alt-section__title {
      font-size: 1.5rem;
    }
    
    .thanh-tich-alt-section__layout {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      gap: 12px;
    }
    
    /* Reset all cards to single column */
    .thanh-tich-alt-section__card:nth-child(1),
    .thanh-tich-alt-section__card:nth-child(2),
    .thanh-tich-alt-section__card:nth-child(3),
    .thanh-tich-alt-section__card:nth-child(4),
    .thanh-tich-alt-section__card:nth-child(5),
    .thanh-tich-alt-section__card:nth-child(6),
    .thanh-tich-alt-section__card:nth-child(7),
    .thanh-tich-alt-section__card:nth-child(8),
    .thanh-tich-alt-section__card:nth-child(9) {
      grid-column: auto;
      grid-row: auto;
    }
    
    .thanh-tich-alt-section__card {
      padding: 20px 18px;
      min-height: 140px !important;
      border-radius: 16px;
    }
    
    .thanh-tich-alt-section__card-image {
      height: 100px;
    }
    
    .thanh-tich-alt-section__card-content {
      padding: 20px;
    }
    
    .thanh-tich-alt-section__badge {
      font-size: 0.6rem;
      padding: 5px 10px;
      margin-bottom: 10px;
    }
    
    .thanh-tich-alt-section__number {
      font-size: 2.5rem;
      margin-bottom: 10px;
    }
    
    .thanh-tich-alt-section__text {
      font-size: 0.85rem;
    }
    
    .thanh-tich-alt-section__decoration {
      width: 350px;
      height: 350px;
    }
  }
  /* khu vực ảnh */

  .img.img1 {
    background-image: url('/about/images/tt21.png');
    background-size: cover;
    background-position: center;
  }
  .img.img2 {
    background-image: url('/about/images/img2.png');
    background-size: cover;
    background-position: center;
  }
  .img.img3 {
    background-image: url('/about/images/tt22.png');
    background-size: cover;
    background-position: center;
  }
  .img.img4 {
    background-image: url('/about/images/tt24.png');
    background-size: cover;
    background-position: center 40%;
  }
  .img.img5 {
    background-image: url('/about/images/tt25.png');
    background-size: cover;
    background-position: center;
  }
  .img .thanh-tich-alt-section__text {
    z-index: 2;
    color: #fff;
  }
  .img .thanh-tich-alt-section__number {
    z-index: 2;
  }
  .img::after {
    z-index: 1;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, rgba(4,0,21,01) 0%, rgba(26,26,92,0.0) 50%);
    border-radius: 20px;
    pointer-events: none;
  }
</style>

