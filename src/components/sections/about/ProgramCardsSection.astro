<script>
  function initSlider() {
    const slider = document.querySelector('.program-cards-section__slider') as HTMLElement;
    const dots = document.querySelectorAll('.program-cards-section__dot');
    const leftBtn = document.querySelector('.program-cards-section__arrow-btn--left') as HTMLElement;
    const rightBtn = document.querySelector('.program-cards-section__arrow-btn--right') as HTMLElement;

    
    if (!slider || !dots.length) return;

    // Clone all cards for infinite scroll
    const cards = slider.querySelectorAll('.program-cards-section__card');
    cards.forEach(card => {
      const clone = card.cloneNode(true) as HTMLElement;
      slider.appendChild(clone);
    });

    const totalOriginalCards = cards.length;
    const firstCard = cards[0] as HTMLElement;
    const cardWidth = firstCard.offsetWidth || 0;
    const gap = 24;
    const cardWithGap = cardWidth + gap;

    let isDragging = false;
    let startX = 0;
    let scrollLeft = 0;

    const scrollToIndex = (index: number) => {
      slider.scrollTo({
        left: index * cardWithGap,
        behavior: 'smooth'
      });
    };

    const getCurrentIndex = () => {
      const scrollLeft = slider.scrollLeft;
      return Math.round(scrollLeft / cardWithGap);
    };

    // Mouse drag support
    slider.addEventListener('mousedown', (e) => {
      isDragging = true;
      startX = e.pageX - slider.offsetLeft;
      scrollLeft = slider.scrollLeft;
      slider.style.cursor = 'grabbing';
    });

    slider.addEventListener('mouseleave', () => {
      isDragging = false;
      slider.style.cursor = 'grab';
    });

    slider.addEventListener('mouseup', () => {
      isDragging = false;
      slider.style.cursor = 'grab';
    });

    slider.addEventListener('mousemove', (e) => {
      if (!isDragging) return;
      e.preventDefault();
      const x = e.pageX - slider.offsetLeft;
      const walk = (x - startX) * 1;
      slider.scrollLeft = scrollLeft - walk;
    });

    // Handle infinite scroll by resetting position
    let isResetting = false;
    slider.addEventListener('scroll', () => {
      if (isResetting) return;

      const currentScrollLeft = slider.scrollLeft;
      const maxScroll = (totalOriginalCards * cardWithGap) - (slider.offsetWidth - 32);

      // If scrolled past the cloned section, reset to beginning
      if (currentScrollLeft > maxScroll + cardWithGap) {
        isResetting = true;
        slider.scrollLeft = 0;
        setTimeout(() => { isResetting = false; }, 50);
      }

      // Update active dot based on actual position
      const activeIndex = getCurrentIndex() % totalOriginalCards;
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === activeIndex);
      });
    });

    // Click dots to scroll
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => scrollToIndex(index));
    });

    // Arrow buttons navigation
    if (leftBtn) {
      leftBtn.addEventListener('click', () => {
        const currentIndex = getCurrentIndex();
        scrollToIndex(currentIndex - 1);
      });
    }

    if (rightBtn) {
      rightBtn.addEventListener('click', () => {
        const currentIndex = getCurrentIndex();
        scrollToIndex(currentIndex + 1);
      });
    }
  }

  // Try multiple ways to initialize to handle different timing
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSlider);
  } else {
    // DOM already loaded
    initSlider();
  }

  // Also try to initialize on next frame
  requestAnimationFrame(initSlider);
</script>

