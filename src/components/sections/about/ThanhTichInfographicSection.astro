<style>
@import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;800&display=swap');
* { margin: 0; padding: 0; box-sizing: border-box; }
html, body { font-family: 'Be Vietnam Pro', Arial, sans-serif; }

.thanh-tich-infographic {
  padding: 80px 20px;
  background: rgba(26, 26, 77, 1);
  position: relative;
}


/* Card hover and subtle motion to make layout more lively */
.thanh-tich-infographic__box { transition: transform 220ms ease, box-shadow 220ms ease; }
.thanh-tich-infographic__box:hover { transform: translateY(-8px); box-shadow: 0 14px 40px rgba(0,0,0,0.35); }

.thanh-tich-infographic__container {
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.thanh-tich-infographic__header {
  margin: 0 0 18px 0;
  padding: 18px 0 0 0;
  z-index: 5;
  border-bottom: 2px solid rgba(255,255,255,00.5);
}

.thanh-tich-infographic__title {
  font-size: 32px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  letter-spacing: 2px;
  text-transform: uppercase;
}

/* Panel + Grid */
.thanh-tich-infographic__panel {
  /*background: linear-gradient(180deg, rgba(24,26,63,1) 0%, rgba(20,22,54,1) 100%);*/
  /*border-radius: 14px;*/
  /*border: 1px solid rgba(255,214,0,0.06);*/
  /*box-shadow: 0 10px 40px rgba(8,10,30,0.6) inset;*/
  box-sizing: border-box;
  width: 100%;
  position: relative;
  /* Make panel height equal to 9/16 of its own width */
  padding-top: calc(100% * 9 / 16);
  overflow: hidden;
}

.thanh-tich-infographic__panel-grid {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  display: grid;
  grid-template-columns: repeat(24, 1fr);
  grid-template-rows: repeat(12, 1fr);
  gap: 0px;
  align-items: stretch;
}

.thanh-tich-infographic__box {
  border-radius: 1px;
  border: 1px solid rgba(255,255,255,0.1);
  padding: 18px;
  color: #fff;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140px;
}

.thanh-tich-infographic__box-img { width: 100%; height: 100%; object-fit: cover; border-radius: 6px; display:block; }
.thanh-tich-infographic__hero-img { width: 100%; height: 240px; object-fit: cover; border-radius: 6px; display:block; }

.thanh-tich-infographic__box-content { position: relative; z-index: 3; }
.thanh-tich-infographic__small-stat { font-weight: 800; color: rgb(255,214,0); font-size: 36px; }
.thanh-tich-infographic__small-desc { font-size: 13px; opacity: 0.95; margin-top: 6px; }
.thanh-tich-infographic__badge { background: rgba(255,214,0,0.06); color: rgb(255,214,0); padding: 10px 14px; display:inline-block; border-radius: 999px; font-weight:800; }

.thanh-tich-infographic__big-title { font-size: 48px; font-weight:900; color: rgb(255,214,0); text-align:center; line-height:1; }

/* Grid placements (used by markup) - force all boxes to last cell (24/12) */
.box--a { grid-column: 1 / 12; grid-row: 1 / 4; }
.box--b { grid-column: 12 / 20; grid-row: 1 / 6; }
.box--c { grid-column: 20 / 25; grid-row: 1 / 6; }
.box--d { grid-column: 1 / 5; grid-row: 4 / 10; }
.box--e { grid-column: 5 / 12; grid-row: 4 / 6; }
.box--f { grid-column: 20 / 25; grid-row: 6 / 10; }
.box--g { grid-column: 1 / 8; grid-row: 10 / 12; }
.box--h { grid-column: 8 / 15; grid-row: 10 / 13; }
.box--i { grid-column: 15 / 25; grid-row: 10 / 13; }
.box--k { grid-column: 5 / 12; grid-row: 6 / 10; }
.box--l { grid-column: 12 / 20; grid-row: 6 / 10; }
.box--m { grid-column: 1 / 8; grid-row: 12 / 13; }


/* Khu vực sửa vị trí stat, desc */
.box--a .thanh-tich-infographic__box-content
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.box--a .thanh-tich-infographic__small-desc,
.box--g .thanh-tich-infographic__small-desc,
.box--m .thanh-tich-infographic__small-desc
{ order: 1; text-align: right; }
.box--a .thanh-tich-infographic__small-stat,
.box--m .thanh-tich-infographic__small-stat,
.box--g .thanh-tich-infographic__small-stat
{ order: 2; text-align: right; }

.box--k .thanh-tich-infographic__box-content,
.box--g .thanh-tich-infographic__box-content,
.box--m .thanh-tich-infographic__box-content
{
  align-items: center;
  width: 100%;
}
.box--k .thanh-tich-infographic__small-desc
{ order: 1; text-align: right; }
.box--k .thanh-tich-infographic__small-stat
{ order: 2; text-align: right; }

/* Khu vực xóa viền*/
.box--a{
  border-top: 0px;
  border-left: 0px;
}
.box--g,
.box--m{
  border-bottom: 0px;
  border-left: 0px;
}
.box--d
{
  border-top: 0px;
  border-left: 0px;
}
.box--c
{
  border-top: 0px;
  border-right: 0px;
}
.box--f,
.box--i
{
  border-right: 0px;
}
.box--i
{
