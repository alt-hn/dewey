    font-size: 18px;
}


/* Responsive: Tablet (768px - 1024px) */
@media (max-width: 1024px) and (min-width: 769px) {
  .thanh-tich-infographic { 
    padding: 60px 20px; 
  }
  
  .thanh-tich-infographic__container { 
    max-width: 100%; 
  }
  
  .thanh-tich-infographic__title {
